{
  "extends": "./.nuxt/tsconfig.json",
  // "exclude": ["playground", "dist"]
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "#app": [
        "./node_modules/nuxt/dist/app"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "@nuxt/kit"
    ],
    "allowJs": true,
    "strict": false,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
